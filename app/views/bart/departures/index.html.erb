<ol class="departures">
  <% @sorted_estimates.each do |destination, estimate| %>
    <li class="departures-item bart--<%= estimate.first.fetch( "color" ) %>">
      <div class="departures-item-train">
        <h3 class="departures-item-type">Bart</h3>
        <span class="departures-item-destination-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
            <g stroke-linecap="round" stroke-linejoin="round" fill="none">
              <circle cx="12.001" cy="11.998" r="11.5" />
              <path d="M15.501 14.498l-3.5-4.5-3.5 4.5h-4l7.5-9 7.5 9z" fill="#fff" />
            </g>
          </svg>
        </span>
        <h1 class="departures-item-destination-text"><%= destination %></h1>
        <h3 class="departures-item-station">Powell St.</h3>
      </div>
      <div class="departures-item-time">
        <span class="departures-item-time-label">Leave at</span>
        <h2 class="departures-item-time-display">
          <%= estimate.first&.fetch( "leave_at" ) %>
        </h2>
      </div>
    </li>
  <% end %>
</ol>
